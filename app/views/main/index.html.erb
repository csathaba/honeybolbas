<!-- Header -->
<header>
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading"><%= t('welcome') %></div>
    </div>
  </div>
</header>

<!-- About Section -->
<section id="varieties" class="container content-section contact-section text-center">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h2><%= t('varieties') %></h2>
      <p><%= t('varieties_desc_1') %></p>
      <ul class="honey_list">
        <li><%= t('honey_akac') %></li>
        <li><%= t('honey_hars') %></li>
        <li><%= t('honey_repce') %></li>
        <li><%= t('honey_napraforgo') %></li>
        <li><%= t('honey_erdei') %></li>
        <li><%= t('honey_vegyesvirag') %></li>
      </ul>
      <p><%= t('varieties_desc_2') %><br><%= t('varieties_desc_3') %></p>
    </div>
  </div>
</section>


<!-- Gallery Grid Section -->
<section id="gallery" class="bg-light-gray">
  <div class="container content-section">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading"><%= t('gallery') %></h2>
      </div>
    </div>
    <div class="row">
      <% @honeys_portrait.each do |honey| %>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 gallery-item">
          <%= link_to "#Honey_#{honey.id}", class: "gallery-link", data: { toggle: "modal" } do %>
            <div class="gallery-hover">
              <div class="gallery-hover-content">
                <i class="fa fa-plus fa-3x"></i>
              </div>
            </div>
            <%= image_tag honey.honeyimg.small.url, class: "img-responsive img-rounded img-honey" %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <% @honeys_landscape.each do |honey| %>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 gallery-item">
          <%= link_to "#Honey_#{honey.id}", class: "gallery-link", data: { toggle: "modal" } do %>
            <div class="gallery-hover">
              <div class="gallery-hover-content">
                <i class="fa fa-plus fa-3x"></i>
              </div>
            </div>
            <%= image_tag honey.honeyimg.small.url, class: "img-responsive img-rounded img-honey" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Contact Section -->
<section id="contact" class="content-section text-center">
  <div class="contact-section">
    <div class="container">
      <div class="col-lg-8 col-lg-offset-2">
        <h2><%= t('contact') %></h2>
<!--    <p>Feel free to email us!</p> -->
        <p><%= t('title') %><br>
        www.honeybolbas.cloud <br>
        info@honeybolbas.cloud <br>
        +36 30 307 1157</p>
      </div>
    </div>
  </div>
</section>

<% @honeys.each do |honey| %>
  <div class="gallery-modal modal fade" id="Honey_<%= honey.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
      <div class="modal-content">
        <%= image_tag honey.honeyimg.small.url %>
        <p class="item-intro">
          <% if I18n.locale == :hu %>
            <%= honey.description_hu %>
          <% elsif I18n.locale == :de %>
            <%= honey.description_de %>
          <% else %>
            <%= honey.description_en %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>
